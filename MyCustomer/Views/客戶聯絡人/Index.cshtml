@model MyCustomer.Models.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="well">
    @using (Html.BeginForm("Index", "客戶聯絡人", FormMethod.Post))
    {
        <div class="col-md-2">
            @Html.LabelFor(model => model.contactsearch.Name)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(model => model.contactsearch.Name)
        </div>
        <p>
            <input type="submit" value="Search" />
        </p>
    }
</div>

<table class="table">
    <tr>
        <th>
            職稱
        </th>
        <th>
            姓名
        </th>
        <th>
            Email
        </th>
        <th>
            手機
        </th>
        <th>
            電話
        </th>
        <th>
            客戶名稱
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.contact) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.手機)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
