@model MyCustomer.Models.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="well">
    @using (Html.BeginForm("Index", "客戶資料", FormMethod.Post))
    {
        <div class="col-md-2">
            @Html.LabelFor(model => model.customersearch.CustomerName)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(model => model.customersearch.CustomerName)
        </div>
        <p>
            <input type="submit" value="Search" />
        </p>
    }
</div>

<table class="table">
    <tr>
        <th>
            客戶名稱
        </th>
        <th>
            統一編號
        </th>
        <th>
            電話
        </th>
        <th>
            傳真
        </th>
        <th>
            地址
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.customer)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
